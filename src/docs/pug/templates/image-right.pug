extends ../example-responsive.pug

block breadcrumb
  +example_breadcrumb(contents.card)

block example_description
  h1.h2.font-400= contents.card.examples.image_right.title
  p.font-4.mb-4= contents.card.examples.image_right.description

block example_result
  .card.flex-sm-row
    .card-body
      h4.card-title Right image
      p.card-text Example text
    img.card-img-bottom.card-img-sm-right(src="/" + pkg.name + "/assets/img/thumbnail.jpg")

block example_code
  :encode-pug
    | <!-- Source -->
    .card.flex-sm-row
      .card-body
        h4.card-title Right image
        p.card-text Example text
      img.card-img-bottom.card-img-sm-right(src="/" + pkg.name + "/assets/img/thumbnail.jpg")

