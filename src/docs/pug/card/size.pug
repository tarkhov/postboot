extends ../example.pug

block head_title
  +example_head_title('card', 'size')

block meta_description
  +example_meta_description('card', 'size')

block breadcrumb
  +example_breadcrumb('card')

block example_description
  +example_description('card', 'size')

block example_result
  .row
    - for(var i = 1; i <= 5; i++)
      div(class='col-md-' + (i < 3 ? 6 : 12))
        .card.mb-gutter(class="card-" + i)
          .card-header
            ul.nav.nav-tabs.card-header-tabs
              li.nav-item: a.nav-link.active(href="#") Active
              li.nav-item: a.nav-link(href="#") Link
              li.nav-item: a.nav-link.disabled.d-sm-block.d-none(href="#") Disabled
          .card-body
            h4.card-title(class="font-" + (i + 2)) Example title
            p.card-text Example text
          .card-footer
            ul.nav.nav-pills.card-footer-pills
              li.nav-item: a.nav-link.active(href="#") Active
              li.nav-item: a.nav-link(href="#") Link
              li.nav-item: a.nav-link.disabled.d-sm-block.d-none(href="#") Disabled

block example_code
  :encode-pug
    | <!-- Source -->
    - for(var i = 1; i <= 5; i++)
      .card(class="card-" + i)

block example_after
  #responsive.pt-3
    h2.h4.font-400.mb-3 Responsive
    .card.card-body.bg-card-cap
      +example_code
        :encode-pug
          | <!-- Responsive -->
          each breakpoint in ['sm', 'md', 'lg', 'xl']
            - for(var size = 1; size <= 5; size++)
              .card(class="card-" + breakpoint + '-' + size)
            ="\n"
  .clearfix

block sidebar_right_items_after
  li.nav-item
    a.nav-link(href="#responsive") Responsive
