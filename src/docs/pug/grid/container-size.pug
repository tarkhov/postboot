extends ../example.pug

block head_title
  +example_head_title('grid', 'container_size')

block meta_description
  +example_meta_description('grid', 'container_size')

block breadcrumb
  +example_breadcrumb('grid')

block example_description
  +example_description('grid', 'container_size')

block example_body
  table.table.table-bordered.table-striped.card-table.mb-0
    thead
      tr
        th Class
        th Size 
        th Device width
    tbody
      each container, width in [{'size': '540px', 'breakpoint': '≥576px'}, {'size': '720px', 'breakpoint': '≥768px'}, {'size': '960px', 'breakpoint': '≥992px'}, {'size': '1140px', 'breakpoint': '≥1200px'}, {'size': '1570px', 'breakpoint': '≥1600px'}]
        tr
          td #[code.font-2= '.container-' + (width + 1)]
          td= container.size
          td= container.breakpoint

block example_code
  :encode-pug
    | <!-- Source -->
    - for(var i = 1; i <= 5; i++)
      .container(class='container-' + i)

block example_after
  #responsive.pt-3
    h2.h4.font-400.mb-3 Responsive
    .card.card-body.bg-card-cap
      +example_code
        :encode-pug
          | <!-- Source -->
          .container-md-2
          .container-lg-3
          .container-xl-4
          .container-xxl-5
  .clearfix

block sidebar_right_items_after
  li.nav-item
    a.nav-link(href="#responsive") Responsive
