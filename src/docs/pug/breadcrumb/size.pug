extends ../example.pug

block head_title
  +example_head_title('breadcrumb', 'size')

block meta_description
  +example_meta_description('breadcrumb', 'size')

block breadcrumb
  +example_breadcrumb('breadcrumb')

block example_description
  +example_description('breadcrumb', 'size')

block example_result
  - for(var size = 1; size <= 5; size++)
    +breadcrumb_variant(size)

block example_code
  :encode-pug
    | <!-- Source -->
    - for(var size = 1; size <= 5; size++)
      ol.breadcrumb(class='breadcrumb-' + size)

block example_after
  #responsive.pt-3
    h2.h4.font-400.mb-3 Responsive
    .card.card-body.bg-card-cap
      +example_code
        :encode-pug
          | <!-- Responsive -->
          each breakpoint in ['sm', 'md', 'lg', 'xl']
            - for(var size = 1; size <= 5; size++)
              ol.breadcrumb(class='breadcrumb-' + breakpoint + '-' + size)
            ="\n"
  .clearfix

block sidebar_right_items_after
  li.nav-item
    a.nav-link(href="#responsive") Responsive
