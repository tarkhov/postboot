extends ../example.pug

block head_title
  +example_head_title('dropdown', 'menu_size')

block meta_description
  +example_meta_description('dropdown', 'menu_size')

block breadcrumb
  +example_breadcrumb('dropdown')

block example_description
  +example_description('dropdown', 'menu_size')

block example_result
  - for(var size = 1; size <= 5; size++)
    .d-block.d-sm-inline-block.mb-2.mr-sm-1.mr-lg-0
      +dropdown_size(size)

block example_code
  :encode-pug
    | <!-- Source -->
    - for(var size = 1; size <= 5; size++)
      .dropdown-menu(class='dropdown-menu-' + size)

block example_after
  #responsive.pt-3
    h2.h4.font-400.mb-3 Responsive
    .card.card-body.bg-card-cap
      +example_code
        :encode-pug
          | <!-- Responsive -->
          each breakpoint in ['sm', 'md', 'lg', 'xl']
            - for(var size = 1; size <= 5; size++)
              .dropdown-menu(class='dropdown-menu-' + breakpoint + '-' + size)
            ="\n"
  .clearfix

block sidebar_right_items_after
  li.nav-item
    a.nav-link(href="#responsive") Responsive
