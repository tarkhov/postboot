extends ../example.pug

block head_title
  +example_head_title('background', 'opacity')

block meta_description
  +example_meta_description('background', 'opacity')

block breadcrumb
  +example_breadcrumb('background')

block example_description
  +example_description('background', 'opacity')

block example_body
  .card-body.bg-dark.bg-striped.text-white
    each text, variant in colors
      +background(text, ['bg-' + variant, 'bg-opacity-50'])

block example_code
  :encode-pug
    | <!-- Source -->
    each text, variant in colors
      - for(var i = 1; i <= 9; i++)
        div(class=['bg-' + variant, 'bg-opacity-' + i * 10])
      = "\n"
